{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "args": "after-used", "argsIgnorePattern": "^_" }],
    "no-constant-binary-expression": "error",
    "no-unreachable-loop": "error",
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "prefer-const": ["error", { "destructuring": "all" }]
  }
}


